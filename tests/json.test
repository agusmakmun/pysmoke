[createpost]
url: /posts
method: POST
authorization:
payload: {"title": "This is a test title", "body": "This is a test body", "userId": "{user_id}"}
tests:
	http_status: 201
	headers.Content-Type: True
	headers.Location: True
	title: True
	body: True
	id: True
	id: 101

[updatepost]
url: /posts/{post_id}
method: PUT
authorization:
payload: {"title": "This is a test title", "body": "This is a test body"}
tests:
	http_status: 200
	headers.Content-Type: True
	title: True
	body: True
	id: True
	id: 1

